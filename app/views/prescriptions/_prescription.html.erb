
<div class="col-sm">
<div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Prescription ID: <strong><%= prescription.id %> </strong></h6>
  </div>
  <div class="card-body">
      <strong><%= prescription.drug_name %> </strong>
      <strong><%= prescription.drug_strength %> </strong>
      <strong><%= prescription.drug_code %> </strong>

      <hr>
      <%= link_to 'Delete', [prescription.medical_record, prescription], method: :delete, class: "button is-danger", data: { confirm: "Are you sure?" } %> 
    </div>
</div>

</div>
